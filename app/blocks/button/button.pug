mixin button(tag)
  +b(tag || 'a').button(tabindex="0")&attributes(attributes)
    div
      block

mixin button-app-store()
  +b('a').button(tabindex="0", href="https://apps.apple.com/us/app/infinite-creator/id1616340639", target="_blank")&attributes(attributes)
    div
      +image-svg('app-store')

mixin button-google-play()
  +b('a').button(tabindex="0", href="https://play.google.com/store/apps/details?id=com.infinitecreator.app.prod", target="_blank")&attributes(attributes)
    div
      +image-svg('google-play')
