mixin image-png(src, alt)
  - const image = `assets/images/${src}`

  +b.image&attributes(attributes)
    picture
      source(srcset=`${image}.webp, ${image}@2x.webp 2x, ${image}@3x.webp 3x`, type='image/webp')
