//- Need sync with createImage function
mixin image-jpg(src, alt)
  - const image = `assets/images/${src}`

  +b.image&attributes(attributes)
    picture
      source(srcset=`${image}.webp, ${image}@2x.webp 2x, ${image}@3x.webp 3x`, type='image/webp')
      img(srcset=`${image}.jpg, ${image}@2x.jpg 2x, ${image}@3x.jpg 3x`, src=`${image}.jpg` alt=alt || '')
    block

