mixin header()
  +b.HEADER(data-section="").header#about&attributes(attributes)
    .container.hide-sm
      nav
        +list(getData('navigation'))._sm._bold._light.__list
    +image-png('about/phone', 'Smartphone').__image.hide-sm
    .container.header__content
      +burger._light.js-burger.show-sm
      +e.text-content
        +image-svg('logo').__logo
        +title('h1')._light.__title Sell your real estate faster
        +form.__form
          +inputbox._md._dark.hide-sm.__inputbox
            +input(data-mask="tel", type="tel", autocomplete="on", required="")._md._dark
            +button('button')._primary._lg Send me invite
          .header__buttons.show-sm
            +button._lg._primary Download app
            +button(data-popup-trigger="country-code")._lg._dark Send me invite

mixin fixed-header(json)
  +b.HEADER.fixed-header.js-fixed-header&attributes(attributes)
    .container
      +e.content
        +image-svg('logo-text').__logo
        nav
          +list(getData(json))._lg._bold._gray.__list
