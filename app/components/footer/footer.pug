mixin footer(listData)
  - const year = new Date().getFullYear();
  +b.FOOTER.footer&attributes(attributes)
    .container
      +e.content
        +e.main
          +e.main-top
            +image-svg('logo-branded-secondary').__logo
            +inputbox._sm._dark.__inputbox.hide-sm
              +input(data-mask="tel", type="tel")._sm._dark
              +button._sm._primary Send me invite
            +button(data-popup-trigger="country-code")._sm._primary.show-sm Send me invite
          +list(getData(listData))._md._light-gray.__list
          +e.copyright &#169; #{year} Infinite Creator
        +e.buttons
          +button-google-play._dark._google-play.__button
          +button-app-store._dark._app-store.__button
