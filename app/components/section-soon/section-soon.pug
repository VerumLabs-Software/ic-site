mixin section-soon()
  - const year = new Date().getFullYear();
  +b.SECTION.section-soon&attributes(attributes)
    .container
      +image-svg('logo-soon').__logo
      +e.H1.title Coming soon
      +e.divider.hide-xs
      +e.P.description Sorry our website is currently getting a face lift
      +e.P.description check back soon for the new and improved site
    .container.section-soon__bottom
      +e.links
        +e.A.link(href="./privacy") Privacy Policy
        +e.A.link(href="./terms") Terms & Conditions
      +e.copyright #{year} Infinite Creator
